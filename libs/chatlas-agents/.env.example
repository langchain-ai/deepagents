# ChATLAS Agents Environment Configuration
# Copy this file to .env and fill in your actual values

# LLM Provider Configuration
# Supported providers: openai, anthropic, groq
CHATLAS_LLM_PROVIDER=openai
CHATLAS_LLM_MODEL=gpt-4
CHATLAS_LLM_API_KEY=your-api-key-here
# CHATLAS_LLM_BASE_URL=  # Optional: custom API endpoint
CHATLAS_LLM_TEMPERATURE=0.7

# MCP Server Configuration
CHATLAS_MCP_URL=https://chatlas-mcp.app.cern.ch/mcp
CHATLAS_MCP_TIMEOUT=30

# Agent Configuration
CHATLAS_AGENT_NAME=chatlas-agent
CHATLAS_AGENT_VERBOSE=false
CHATLAS_AGENT_MAX_ITERATIONS=10

