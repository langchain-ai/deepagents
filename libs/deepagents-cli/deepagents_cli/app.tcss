/* DeepAgents CLI Textual Stylesheet */

/* Main screen layout */
Screen {
    layout: vertical;
}

/* Chat area - main scrollable messages area */
#chat {
    height: 1fr;
    padding: 1 2;
    background: $background;
}

/* Welcome banner */
#welcome-banner {
    height: auto;
    margin-bottom: 1;
}

/* Messages area */
#messages {
    height: auto;
}

/* Input area */
#input-area {
    height: auto;
    min-height: 3;
    max-height: 12;
    dock: bottom;
    margin: 0 1;
}

/* Status bar */
#status-bar {
    height: 1;
    dock: bottom;
}
